{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "@meteorjs/eslint-config-meteor"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "import",
        "meteor",
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "react/jsx-one-expression-per-line": ["error", { "allow": "literal" } ],
        "max-len": ["error", 120],
        "class-methods-use-this": "off"
    }
}
